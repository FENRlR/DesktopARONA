<UserControl x:Class="ARONA_dst.Views.UCPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ARONA_dst.Views"
             mc:Ignorable="d" 
             d:DesignHeight="610" d:DesignWidth="800"
             FocusVisualStyle="{x:Null}"
             >
    <Grid Name="Panel" Background="Transparent" FocusVisualStyle="{x:Null}">
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled" FocusVisualStyle="{x:Null}">
            <Canvas Name="Frame" Background="{x:Null}" FocusVisualStyle="{x:Null}">
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <TranslateTransform />
                    </TransformGroup>
                </Canvas.RenderTransform>
                <Canvas.LayoutTransform>
                    <TransformGroup>
                        <ScaleTransform  />
                    </TransformGroup>
                </Canvas.LayoutTransform>
            </Canvas>
        </ScrollViewer>
    </Grid>
</UserControl>
